{
  "name": "@strong-roots-capital/sorted-cartesian-product",
  "version": "0.0.1",
  "description": "Cartesian product of a list including only sorted elements",
  "main": "dist/src/sorted-cartesian-product.js",
  "types": "dist/src/sorted-cartesian-product.d.ts",
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "ava": "ava -s -v",
    "ava:fail-fast": "ava -s -v --fail-fast",
    "watch:ava": "nodemon -e 'ts json' -x 'npm run ava || true'",
    "watch:ava:fail-fast": "nodemon -e 'ts json' -x 'npm run ava:fail-fast || true'",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --ext ts --fix .",
    "watch:lint": "nodemon -e 'ts js json' -x 'npm run lint || true'",
    "test": "npm run lint && npm run nyc",
    "nyc": "nyc ava",
    "test:tap": "nyc ava --tap | tap-nyc",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "watch:test": "nodemon -e 'ts json' -x 'npm test || true'",
    "typedoc": "typedoc",
    "push-with-tags": "git push origin master && git push origin --tags",
    "push-and-publish": "npm run push-with-tags && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run typedoc && git add doc && (git commit -m 'Update documentation' || true)"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strong-roots-capital/sorted-cartesian-product.git"
  },
  "keywords": [
    "sorted",
    "cartesian",
    "product"
  ],
  "author": "Amchelle Clendenin <amchelle.clendenin@utexas.edu> (https://github.com/strong-roots-capital)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/strong-roots-capital/sorted-cartesian-product/issues"
  },
  "homepage": "https://github.com/strong-roots-capital/sorted-cartesian-product",
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "immutable-ext": "^1.1.5"
  },
  "devDependencies": {
    "@types/node": "^10.14.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "ava": "^1.4.1",
    "codecov": "^3.1.0",
    "eslint": "^5.16.0",
    "husky": "^1.3.1",
    "is-array-sorted": "^2.0.0",
    "nyc": "^14.1.0",
    "tap-nyc": "^1.0.3",
    "ts-node": "^7.0.1",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.1.27",
    "typescript": "^3.4.1"
  },
  "files": [
    "dist/src/"
  ],
  "ava": {
    "compileEnhancements": false,
    "files": [
      "!dist/**/*.d.ts",
      "test/**/test-*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
